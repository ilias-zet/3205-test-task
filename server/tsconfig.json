{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node"],

    "module": "Node16",
    "target": "ES2022",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
}
